{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "D:\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"${file}",
				"-fexec-charset=GBK",   
                "-finput-charset=UTF-8",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I","${workspaceFolder}/include",
				"${workspaceFolder}/lib/test.cpp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "编译器: D:\\mingw64\\bin\\g++.exe"
		}
	]
}
